#include <stdio.h>
#include <conio.h>

void army();
void navy();
void airForce();

int main() {

	int flag = 1;

	while(flag) {
		
		printf("\n\nUS Military Encryption Service\n");
		printf("Please input your branch of service:\n");
		printf("0-Exit\t1-Army\t2-Navy\t3-Air Force\n");
		kbhit();
		char in = getch();
			
		switch(in) {
			case '0':
				flag = 0;
				break;
			case '1':
				army();
				break;
			case '2':
				navy();
				break;
			case '3':
				airForce();
				break;
			default:
				printf("Error, please enter a valid military branch.\n");
				break;
		}
	}
	return 0;
}

void army() {
	printf("\nArmy encryption: Press '$' to exit\n:");
	while(1) {
		kbhit();
		char b = getch();
		//Encryption algorithm: Wrap around
		if(b == '$') //EXIT CODE
			break;
		else if(b >= 48 && b <= 56) //NUMBERS
			printf("%c", b+1);
		else if(b == 57)
			printf("%c", b-9);
		else if(b >= 65 && b <=89) //CAPTIAL LETTERS
			printf("%c", b+1);
		else if(b == 90)
			printf("%c", b-25);
		else if(b >= 97 && b <=121) //LOWERCASE LETTERS
			printf("%c", b+1);
		else if(b == 122)
			printf("%c", b-25);
		else if(b == 32) //SPACE
			printf("%c", 33);
		else if(b == 33) //EXCLAMATION POINT
			printf("%c", 44);
		else if(b == 44) //COMMA
			printf("%c", 46);
		else if(b == 46) //PERIOD
			printf("%c", 63);
		else if(b == 63) //QUESTION MARK
			printf("%c", 32);
		else {}
	}
}

void navy() {
	printf("\nNavy code\n");
}

void airForce() {
	printf("\nAir Force code\n");
}
